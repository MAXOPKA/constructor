!!!
%html{:lang => 'ru'}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}/
    %title Панель управления
    
    / [if lt IE 9]
      %script{:src => 'http://html5shim.googlecode.com/svn/trunk/html5.js'}
    
    :javascript
      var CKEDITOR_BASEPATH = '/assets/ckeditor/'
    
    = stylesheet_link_tag 'constructor_core/application'
    = javascript_include_tag 'constructor_core/application'
    = csrf_meta_tag
    = favicon_link_tag
    
    %link{:rel => 'apple-touch-icon', :href => 'images/apple-touch-icon.png'}
    %link{:rel => 'apple-touch-icon', :sizes => '72x72', :href => 'images/apple-touch-icon-72x72.png'}
    %link{:rel => 'apple-touch-icon', :sizes => '114x114', :href => 'images/apple-touch-icon-114x114.png'}
  
  %body
    .navbar.navbar-constructor
      .navbar-inner
        .container-fluid          
          = link_to 'Главная страница', '/', :class => 'brand'
          %a.btn.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse
            %ul.nav
              %li
                = link_to '/admin/pages' do
                  %i.icon-sitemap
                  Структура
              %li
                = link_to '/admin/templates' do
                  %i.icon-film
                  Шаблоны
              /
                %li
                  = link_to '/admin/users' do
                    %i.icon-group
                    Пользователи

            - if user_signed_in?
              %ul.nav.pull-right
                %li
                  = link_to @current_user do
                    = image_tag gravatar_icon(current_user.email, 48), width: 24, height: 24, class: 'avatar'
                    %span= current_user.email
                %li
                  = link_to @current_user, class: 'logout', method: :delete do
                    %i.icon-signout
                    Выйти

    .container-fluid
      .page-header
        .row-fluid
          .span4
            %h3.muted= yield :page_title          
          .span4
            - unless notice.nil?
              .alert.fade.in
                = link_to '×', '#', :class => 'close', 'data-dismiss' => 'alert'
                = notice
            - unless alert.nil?
              .alert.alert-error.fade.in
                = link_to '×', '#', :class => 'close', 'data-dismiss' => 'alert'
                = alert                            

          = yield :actions
      .content          
        .row-fluid
          = yield            
        
  / [if lt IE 7 ]
    %script{:src => '//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js'}
    %script
      window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})
