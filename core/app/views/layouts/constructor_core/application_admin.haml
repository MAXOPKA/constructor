!!!
%html{:lang => 'ru'}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}/
    %title Панель управления     
  
    %meta{:name => 'viewport', :content => 'width=device-width,initial-scale=1'}/      
    
    / [if lt IE 9]
      %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
    
    :javascript
      var CKEDITOR_BASEPATH = '/assets/ckeditor/'
    
    = stylesheet_link_tag "constructor_core/application"
    = javascript_include_tag "constructor_core/application"
    = csrf_meta_tag
    = favicon_link_tag
    
    %link{:rel => "apple-touch-icon", :href => "images/apple-touch-icon.png"}
    %link{:rel => "apple-touch-icon", :sizes => "72x72", :href => "images/apple-touch-icon-72x72.png"}
    %link{:rel => "apple-touch-icon", :sizes => "114x114", :href => "images/apple-touch-icon-114x114.png"}
  
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid          
          = link_to "Главная страница", "/", :class => "brand"
          %a.btn.btn-navbar{'data-toggle' => "collapse", 'data-target' => ".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse
            %ul.nav
              %li.active= link_to "Структура", "/admin/pages"
            %ul.nav.pull-right
              %li
                = link_to "Выйти", "/logout"
          
    .container-fluid
      .page-header
        .row-fluid
          .span4
            %h3.muted= yield :page_title          
          .span4
            - unless notice.nil?
              .alert.fade.in
                = link_to "×", "#", :class => "close", 'data-dismiss' => "alert"
                = notice
            - unless alert.nil?
              .alert.alert-error.fade.in
                = link_to "×", "#", :class => "close", 'data-dismiss' => "alert"         
                = alert                            

          = yield :actions
      .content          
        .row-fluid
          = yield            
        
  / [if lt IE 7 ]
    %script{:src => '//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js'}
    %script
      window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})
